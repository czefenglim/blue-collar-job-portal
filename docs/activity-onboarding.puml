@startuml UC_Onboarding
skinparam conditionStyle diamond
title Activity: Job Seeker Onboarding

|Job Seeker|
start
repeat
  if (Skip Personal Profile?) then (yes)
  else (no)
    :Complete Personal Profile;
    |System|
    :Validate & Save Profile;
  endif
  |Job Seeker|
  if (Skip Preferred Industries?) then (yes)
  else (no)
    :Select Preferred Industries;
    |System|
    :Save Preferences;
  endif
  |Job Seeker|
  if (Skip Resume Generation?) then (yes)
  else (no)
    :Initiate Resume Generation;
    |System|
    :Generate Resume (AI/Template);
    :Save Resume;
  endif
  |Job Seeker|
  |System|
  :Display Summary;
  |Job Seeker|
  :Review Information;
repeat while (Edit Information?) is (yes)
-> no;
:Click Continue;
|System|
:Finalize Onboarding Status;
stop
@enduml
