@startuml UC_AdminUsers
skinparam conditionStyle diamond
skinparam activityDiamondShape true
skinparam nodesep 100
skinparam ranksep 60
title Activity: Manage Users

|Admin|
start
:Access User Management;
|System|
:Fetch User List;
:Display User List;
|Admin|
if (Search/Filter?) then (yes)
  :Enter Search Criteria;
  :Apply Filters;
  |System|
  :Filter Data;
  :Update List Display;
else (no)
endif
|Admin|
:Select User;
|System|
:Fetch User Details;
:Display User Details;
|Admin|
if (Action?) then (Suspend)
  :Click Suspend;
  :Enter Reason;
  :Confirm;
  |System|
  :Update Status to Suspended;
  :Notify User;
else
  if (Action?) then (Activate)
    :Click Activate;
    :Confirm;
    |System|
    :Update Status to Active;
  else (Delete)
    :Click Delete;
    :Confirm Warning;
    |System|
    :Soft Delete User;
  endif
endif
stop
@enduml
